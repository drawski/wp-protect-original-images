# BEGIN Secure Original Images
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^http://(beta\.)?rawska(\.art\.pl|\.vbiz\.pl|\.local)/wp/wp-admin/.*$
    RewriteCond %{REQUEST_URI} ^/app/uploads/.+
    RewriteCond %{REQUEST_FILENAME} ^.*?(?<!\-\d|\d\d|\d\d\d|\d\d\d\dx\d|\d\d|\d\d\d|\d\d\d\d)\.(jpg|jpeg|gif|png|bmp)
    RewriteRule . - [R=404,L]
</IfModule>
# END Secure Original Images